<body class="bg-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="card shadow-lg border-0 rounded-lg mt-5">
        <h1 id="page-title" class="text-center font-weight-light my-4">Login</h1>
          <div class="card-body">
            <%= form_with(url: login_path, method: :post) do |form| %>
              <div class=' mb-3'>
                <%= form.label :email %>
                <%= form.text_field :email %>
              </div>
              
              <div class=' mb-3'>
                <%= form.label :password %>
                <%= form.password_field :password %>
              </div>
              
              <div class=' mb-3'>
                <%= form.submit "Sign in", id: 'sign-in-button' %>
              </div>
            <% end %>

            <div>
              <p>Don't have an account? <%= link_to "Register", register_path, id: "register-user" %></p>
            </div>
          </div>
        </div>
      </div>
  </div>
</body>