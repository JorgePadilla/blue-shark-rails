= form_with(model: patient) do |form|
  - if patient.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(patient.errors.count, "error")
        prohibited this patient from being saved:
      %ul
        - patient.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :first_name, style: "display: block"
    = form.text_field :first_name
  %div
    = form.label :second_name, style: "display: block"
    = form.text_field :second_name
  %div
    = form.label :last_name, style: "display: block"
    = form.text_field :last_name
  %div
    = form.label :second_last_name, style: "display: block"
    = form.text_field :second_last_name
  %div
    = form.label :prefer_name, style: "display: block"
    = form.text_field :prefer_name
  %div
    = form.label :gender, style: "display: block"
    = form.select :gender, ['Male', 'Female', 'Other'], include_blank: true
  %div
    = form.label :date_of_birth, style: "display: block"
    = form.date_field :date_of_birth
  %div
    = form.label :DNI, style: "display: block"
    = form.text_field :DNI
  %div
    = form.label :nationality, style: "display: block"
    = form.country_select :nationality, selected: "HN"
  %div
    = form.label :person_in_charge, style: "display: block"
    = form.text_field :person_in_charge
  %div
    = form.label :relationship, style: "display: block"
    = form.text_field :relationship
  %div
    = form.label :address, style: "display: block"
    = form.text_field :address
  %div
    = form.label :landline, style: "display: block"
    = form.number_field :landline
  %div
    = form.label :mobile, style: "display: block"
    = form.number_field :mobile
  %div
    = form.label :email, style: "display: block"
    = form.text_field :email
  %div
    = form.label :email_notification, style: "display: block"
    = form.check_box :email_notification
  %div
    = form.label :find_method, style: "display: block"
    = form.text_field :find_method
  %div
    = form.submit
