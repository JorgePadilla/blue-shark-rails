%body
  .container
    .row.justify-content-center
      .card.shadow-lg.border-0.rounded-lg.mt-5
        %h1#page-title Register
        = form_with(model: @user, url: register_user_path, method: :post) do |f|
          .form-outline.mb-4
            = f.label :email
            = f.text_field :email, class: 'form-control'
          .form-outline.mb-4
            = f.label :password
            = f.password_field :password, class: 'form-control'
          .form-outline.mb-4
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: 'form-control'
          .form-outline.mb-4
            = f.submit "Create Account", id: "submit-register-user", class: 'btn btn-primary btn-block mb-4'
